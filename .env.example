# MySQL MCP Server Configuration

# ============================================
# Required Connection Parameters
# ============================================

# Database host address (required)
MYSQL_HOST=localhost

# Database port (default: 3306)
MYSQL_PORT=3306

# Database username (required)
MYSQL_USER=your_username

# Database password (required)
MYSQL_PASSWORD=your_password

# ============================================
# Operation Mode
# ============================================

# Enable write operations - "true" or "false" (default: "false")
# When "false": Only SELECT, SHOW, DESCRIBE, EXPLAIN queries allowed
# When "true": Also allows INSERT, UPDATE, DELETE, REPLACE, and transactions
# WARNING: Setting this to "true" allows data modification!
MYSQL_ALLOW_WRITE=false

# ============================================
# Connection Pool Configuration
# ============================================

# Maximum connections in pool (default: 10)
MYSQL_POOL_SIZE=10

# Connection timeout in milliseconds (default: 10000)
MYSQL_CONNECTION_TIMEOUT=10000

# Query execution timeout in milliseconds (default: 30000)
MYSQL_QUERY_TIMEOUT=30000

# ============================================
# Optional Parameters
# ============================================

# Default database name (optional, not commonly used with fully qualified names)
# MYSQL_DATABASE=mydb

# Path to .env file (optional, for loading from a custom location)
# MYSQL_ENV_FILE=/path/to/.env

# ============================================
# SSL/TLS Configuration (optional)
# ============================================

# Path to SSL CA certificate (optional)
# MYSQL_SSL_CA=/path/to/ca.pem

# Path to SSL client certificate (optional)
# MYSQL_SSL_CERT=/path/to/client-cert.pem

# Path to SSL client key (optional)
# MYSQL_SSL_KEY=/path/to/client-key.pem

# Reject unauthorized SSL certificates - "true" or "false" (default: "true")
# MYSQL_SSL_REJECT_UNAUTHORIZED=true
